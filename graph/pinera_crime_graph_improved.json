{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Tasa de victimización en Chile, 2006-2016.",
  "width": 450,
  "height": 300,
  "background": "#f7f7f7",
  "view": {"fill": "#f7f7f7", "strokeOpacity": 0},
  "data": {
    "url": "https://raw.githubusercontent.com/nicolasrojasv/nicolasrojasv.github.io/refs/heads/main/data/crime_rate_chile.csv",
    "format": {"type": "dsv", "delimiter": ";"}
  },
  "transform": [
    {
      "calculate": "parseFloat(replace(replace(datum.crime_rate, '%',''), ',', '.'))",
      "as": "rate"
    },
    {"calculate": "format(datum.rate, '.1f') + '%'", "as": "rate_label"},
    {"calculate": "toNumber(datum.year)", "as": "year_num"},
    {
      "calculate": "datum.year_num <= 2009 ? 'Bachelet I' : datum.year_num <= 2013 ? 'Piñera I' : 'Bachelet II'",
      "as": "period"
    }
  ],
  "title": {
    "text": "Victimisation Rate by Presidential Period",
    "fontSize": 24,
    "fontWeight": "normal",
    "anchor": "middle",
    "color": "#3d3c3c",
    "subtitle": [
      "% of households victimsed by high-impact crimes in the last 12 months",
      "(Chile, 2006-2016)"
    ],
    "subtitleFontSize": 16,
    "subtitleColor": "#3d3c3c"
  },
  "layer": [
    {
      "mark": {"type": "bar"},
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal",
          "axis": {
            "title": null,
            "labelAngle": 0,
            "labelColor": "#3d3c3c",
            "labelFontSize": 14
          }
        },
        "y": {
          "field": "rate",
          "type": "quantitative",
          "axis": {
            "title": null,
            "grid": false, 
            "labelFontSize": 14,
            "labelColor": "#3d3c3c",
            "labelExpr": "datum.value + '%'"}
        },
        "color": {
          "field": "period",
          "type": "nominal",
          "scale": {
            "domain": ["Bachelet I", "Piñera I", "Bachelet II"],
            "range": ["#B33A3A", "steelblue", "#E63946"]
          },
          "legend": {
            "title": null,
            "orient": "none",
            "direction": "horizontal",
            "legendX": 115,
            "legendY": 10,
            "titleFontSize": 16,
            "labelFontSize": 16
            }
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 14,
        "fontWeight": "normal",
        "align": "center",
        "baseline": "bottom",
        "dy": -4,
        "color": "#3d3c3c"
      },
      "encoding": {
        "x": {"field": "year", "type": "ordinal"},
        "y": {"field": "rate", "type": "quantitative"},
        "text": {"field": "rate_label"}
      }
    }
  ],
  "config": {"view": {"stroke": null}, "font": "Calibri"}
}