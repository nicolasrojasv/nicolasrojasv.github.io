{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Basic map of Scotland using TopoJSON boundaries with custom projection settings.",
  "title": "Scotland",
  "width": 300,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/refs/heads/main/MappingWorkshop/geo_data/scotland.topojson",
    "format": {"type": "topojson", "feature": "data"}
  },
  "mark": {
    "type": "geoshape",
    "fill": "lightblue",
    "stroke": "white",
    "strokeWidth": 1
  },
  "projection": {
    "type": "mercator",
    "scale": 2000,
    "center": [-4, 57],
    "translate": [150, 200]
  }
}